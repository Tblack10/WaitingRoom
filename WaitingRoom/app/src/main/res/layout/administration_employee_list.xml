<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.EmployeeListActivity">

    <TextView
        android:id="@+id/callerListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/callerList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/employeeList"
        android:layout_width="348dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="106dp"
        app:layout_constraintBottom_toTopOf="@+id/newEmployee"
        app:layout_constraintStart_toStartOf="@+id/callerListTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="113dp"
        android:onClick="createEmployee"
        android:text="@string/newEmployee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employeeList" />

</androidx.constraintlayout.widget.ConstraintLayout>